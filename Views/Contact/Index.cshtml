                </div>
            </div>
            <div class="row">
                <div class="col-lg-4">
                    <div class="contact__text">
                        <h3>Contact With us</h3>
                        <ul>
                            <li>Advisors are available:</li>
                            <li>Mon-Fri: 5:00am to 9:00pm</li>
                            <li>Sat-Sun: 6:00am to 9:00pm</li>
                        </ul>
                    </div>
                </div>
                <form class="form-group" method="post" style="margin-left:100px">
                    @Html.LabelFor(x => x.Name)
                    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                    @Html.LabelFor(x => x.Email)
                    @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                    @Html.LabelFor(x => x.Message)
                    @Html.TextBoxFor(x => x.Message, new { @class = "form-control" })
                   
                    <br />
                    <button href="~/Admin/Admin/Dessert" class="btn btn-info">Add</button>
                </form>

            </div>
        </div>
    </section>
